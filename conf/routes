# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                         @controllers.Application.index

# WvW Data
GET        /matches                  @controllers.MatchesController.list
GET        /match_details/:id        @controllers.MatchesController.details(id)

# WvW Aggregates
GET        /realms                   @controllers.AggregatesController.realms

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file             @controllers.Assets.versioned(path="/public", file: Asset)


GET        /api-docs.json            @pl.matisoft.swagger.ApiHelpController.getResources
GET        /api-help                 @controllers.Application.swagger
